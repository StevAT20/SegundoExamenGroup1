@page
@model WebApp.Pages.Nacionalidad.GridModel
@{
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Nacionalidades
        </div>
        <div class="card-body">

            <h5 class="card-title">Nacionalidades</h5>

            <a class="btn btn-secondary" asp-page="Edit"><i class="bx bxs-add-to-queue"></i></a>
            <div class="row">
                <div class="col-12">
                        <table id="GridView" class="table table-bordered table table-striped table table-hover">
                            <thead>
                                <tr>
                                    <td>ID</td>
                                    <td>Nombre</td>
                                    <td>Accion</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GridList)
                                {
                                    <tr>
                                        <td>@item.IdNacionalidad</td>
                                        <td>@item.Nombre</td>
                                        <td>
                                            <div class="d-flex">
                                                <a class="btn btn-secondary me-3" asp-page="Edit" asp-route-id="@item.IdNacionalidad"><i class='bx bx-edit'></i></a>
                                                <button type="button" class="btn btn-secondary" onclick="NacionalidadGrid.OnClickEliminar(@item.IdNacionalidad)"><i class='bx bx-trash'></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script defer src="~/App/Nacionalidad/Grid.js"></script>
}