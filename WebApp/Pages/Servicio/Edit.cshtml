@page
@model WebApp.Pages.Servicio.EditModel
@{
}


<div class="container" id="AppEdit" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue?"Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdServicio" />
                <div class="form-group mb-3">
                    <label for="Entity.NombreServicio" class="form-label">Nombre de Servicio</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreServicio" v-model="Entity.NombreServicio" maxlength="128" required>
                </div>                
                <div class="form-group mb-3">
                    <label for="Entity.PlazoEntrega" class="form-label">Plazo de Entrega</label>
                    <input type="number" class="form-control" asp-for="Entity.PlazoEntrega" v-model="Entity.PlazoEntrega" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.CostoServicio" class="form-label">Costo de Servicio</label>
                    <input type="number" step ="any" class="form-control" asp-for="Entity.CostoServicio" v-model="Entity.CostoServicio" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="number" class="form-control" asp-for="Entity.Estado" v-model="Entity.Estado" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.CuentaContable" class="form-label">CuentaContable</label>
                    <input type="text" class="form-control" asp-for="Entity.CuentaContable" v-model="Entity.CuentaContable" maxlength="50" required>
                </div>              
                
                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue?"Actualizar":"Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{

    <script defer src="~/App/Servicio/Edit.js"></script>
}